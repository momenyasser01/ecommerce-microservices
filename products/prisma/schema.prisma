generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model products {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  description   String?
  price         Float
  quantity      Int
  weight        Int
  measurement   String
  category      Category
  image         String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt()
}

enum Category {
  BREAKFAST
  BEVERAGES
  DAIRY_AND_EGGS
  MEAT_POULTRY_AND_SEAFOOD
  FRUITS_AND_VEGETABLES
}