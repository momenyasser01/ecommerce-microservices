generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model products {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  description   String?
  price         Float
  stock         Int
  weight        Int
  measurement   Measurement
  category      Category
  image         String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt()
  reservations  productReservations[]
}

model productReservations {
  id            String       @id @default(auto()) @map("_id") @db.ObjectId
  productID     String       @db.ObjectId
  product       products     @relation(fields: [productID], references: [id])
  quantity      Int
  expiresAt     DateTime
  status        Status
  
}

enum Status {
  ACTIVE
  CANCELLED
  COMPLETED
}

enum Category {
  BREAKFAST
  BAKERY
  BEVERAGES
  DAIRY_AND_EGGS
  FRUITS_AND_VEGETABLES
  ICE_CREAM
  POULTRY_AND_MEAT
  SEAFOOD
  SNACKS_AND_CHOCOLATE
}

enum Measurement {
  G
  ML
  PCS
}