generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model products {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  description   String?
  price         Float
  stock      Int
  weight        Int
  measurement   Measurement
  category      Category
  image         String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt()
}

enum Category {
  BREAKFAST
  BAKERY
  BEVERAGES
  DAIRY_AND_EGGS
  FRUITS_AND_VEGETABLES
  ICE_CREAM
  POULTRY_AND_MEAT
  SEAFOOD
  SNACKS_AND_CHOCOLATE
}

enum Measurement {
  G
  ML
  PCS
}